{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "nombre": {
        "type": "string"
      },
      "marca": {
        "type": "string"
      },
      "precio": {
        "type": "number",
        "minimum": 0
      },
      "descripcion": {
        "type": "string"
      },
      "disponible": {
        "type": "boolean"
      },
      "dimensiones": {
        "type": "object",
        "properties": {
          "alto": {
            "type": "number",
            "minimum": 0
          },
          "ancho": {
            "type": "number",
            "minimum": 0
          },
          "profundidad": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["alto", "ancho", "profundidad"]
      },
      "caracteristicas": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["nombre", "marca", "precio", "descripcion", "disponible", "dimensiones", "caracteristicas"]
  }
  